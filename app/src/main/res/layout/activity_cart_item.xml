<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".cart_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="161dp"
            android:layout_height="198dp"
            android:layout_gravity="left"
            android:src="@drawable/peacock_plant" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peacock Plant"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/outfit_medium"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected Plant Size :"
                    android:textSize="16dp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/theme_text"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/theme_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price :"
                    android:textSize="16dp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/theme_text"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansita_swashed"
                    android:text="â‚¹499"
                    android:textColor="@color/theme"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity : "
                android:textSize="16dp"
                android:fontFamily="@font/outfit_medium"
                android:textColor="@color/theme_text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/button_stroke"
                    android:layout_marginTop="5dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMinus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"
                        android:background="@android:color/transparent"
                        android:textSize="15sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/txtCount"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="1"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#333333"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPlus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:background="@android:color/transparent"
                        android:textSize="15sp"
                        android:textColor="#666666"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/remove_btn"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/remove_shopping_bag"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#CCCCCC"/>

</LinearLayout>