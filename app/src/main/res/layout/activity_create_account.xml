<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".create_account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:text="Sign up"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/outfit_medium"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="25dp"
                android:fontFamily="@font/inter_extrabold"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textSize="15sp"
                    android:textColor="@color/theme_text"
                    android:fontFamily="@font/inter_medium"/>
                <TextView
                    android:id="@+id/signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Sign in"
                    android:textColor="@color/theme"
                    android:fontFamily="@font/inter_medium"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name*"
                android:textColor="@color/theme_text"
                android:textSize="15dp"
                android:fontFamily="@font/outfit_medium"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your First name"
                android:padding="10dp"
                android:textSize="15dp"
                android:textColorHint="@color/edit_text_stroke"
                android:background="@drawable/edit_text_stroke"
                android:fontFamily="@font/outfit_medium"
                android:inputType="textPersonName"/>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name*"
                android:textColor="@color/theme_text"
                android:textSize="15dp"
                android:fontFamily="@font/outfit_medium"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your Last name"
                android:padding="10dp"
                android:textSize="15dp"
                android:textColorHint="@color/edit_text_stroke"
                android:background="@drawable/edit_text_stroke"
                android:fontFamily="@font/outfit_medium"
                android:inputType="textPersonName"/>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number*"
                android:textColor="@color/theme_text"
                android:textSize="15dp"
                android:fontFamily="@font/outfit_medium"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/phone_no"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your Phone number"
                android:padding="10dp"
                android:textSize="15dp"
                android:textColorHint="@color/edit_text_stroke"
                android:background="@drawable/edit_text_stroke"
                android:fontFamily="@font/outfit_medium"/>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email address*"
                android:textColor="@color/theme_text"
                android:textSize="15dp"
                android:fontFamily="@font/outfit_medium"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your email address"
                android:padding="10dp"
                android:textSize="15dp"
                android:textColorHint="@color/edit_text_stroke"
                android:background="@drawable/edit_text_stroke"
                android:fontFamily="@font/outfit_medium"
                android:inputType="textEmailAddress"/>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password*"
                android:textColor="@color/theme_text"
                android:textSize="15dp"
                android:fontFamily="@font/outfit_medium"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your password"
                android:padding="10dp"
                android:textSize="15dp"
                android:textColorHint="@color/edit_text_stroke"
                android:background="@drawable/edit_text_stroke"
                android:fontFamily="@font/outfit_medium"
                android:inputType="textPassword"/>

            <CheckBox
                android:id="@+id/toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show password"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/outfit_medium"
                android:backgroundTint="@color/theme"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/createAccount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Create Account"
                android:fontFamily="@font/outfit_medium"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:background="@drawable/sign_in_button_fill"
                android:textColor="@color/white"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
